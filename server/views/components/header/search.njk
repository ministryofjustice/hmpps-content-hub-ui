{% macro hubSearch(params, t) %}
<div class="hmpps-header__search {% if params.small %}hmpps-header__search{% endif %}">
  <form action="/search" method="get" role="search" aria-label="{{ t('common:search.label') or 'Search' }}">
    <div class="hmpps-header__search-wrapper">
      <label for="hmpps-header__search-input" class="govuk-visually-hidden">
        {{ t('search.label') or 'Search' }}
      </label>
      <input
        type="search"
        id="hmpps-header__search-input"
        name="query"
        class="hmpps-header__search-input"
        placeholder="{{ t('common:search.placeholder') or 'Search the Content Hub' }}"
        value="{{ params.query }}"
        autocomplete="off"
      />
      <button type="submit" class="hmpps-header__search-button" aria-label="{{ t('common:search.label') or 'Search' }}">
        <svg class="hmpps-header__search-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </button>
    </div>
  </form>
</div>
{% endmacro %}
